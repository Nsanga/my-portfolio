generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  image       String
  title       String
  description String
  techStack   String[]
  link        String?
  github      String?
  year        String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id            Int      @id @default(autoincrement())
  type          String?
  title         String?
  company       String?
  location      String?
  startDate     String?
  endDate       String?
  description   String?
  technologies  String[]
}

model Statistic {
  id        String   @id @default(cuid())
  label     String   // "Visiteurs", "Projets", "Satisfaction", "Réactions"
  value     Int      // valeur statique si nécessaire
  suffix    String?  // "+", "%"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visit {
  id        String   @id @default(cuid())
  ip        String
  createdAt DateTime @default(now())
}

model Reaction {
  id        String   @id @default(cuid())
  type      String   // "like", "love", "wow", etc.
  createdAt DateTime @default(now())
}

model Satisfaction {
  id        String   @id @default(cuid())
  rating    Int      // ex: 0-100 %
  createdAt DateTime @default(now())
}
